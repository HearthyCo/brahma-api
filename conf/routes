# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET            /                                                               gl.glue.brahma.controllers.Application.index()

# CORS OPTIONS preflight request
OPTIONS        /*all                                                           gl.glue.brahma.controllers.Application.preflight(all)

# User
POST           /v1/user                                                        gl.glue.brahma.controllers.UserController.register()
GET            /v1/user                                                        gl.glue.brahma.controllers.UserController.getMe()
GET            /v1/user/home                                                   gl.glue.brahma.controllers.HomeController.get()
POST           /v1/user/login                                                  gl.glue.brahma.controllers.UserController.login()
POST           /v1/user/logout                                                 gl.glue.brahma.controllers.UserController.logout()
GET            /v1/user/sessions/$state<(programmed|underway|closed)\b>        gl.glue.brahma.controllers.SessionController.getState(state: String)
GET            /v1/user/balance                                                gl.glue.brahma.controllers.TransactionController.getUserTransactions()
GET            /v1/user/history/:section                                       gl.glue.brahma.controllers.HistoryController.getHistorySection(section: String)


# Sessions
POST           /v1/session                                                     gl.glue.brahma.controllers.SessionController.requestSession()
GET            /v1/session/:session                                            gl.glue.brahma.controllers.SessionController.getSession(session: Integer)

#Services
GET            /v1/services                                                    gl.glue.brahma.controllers.ServiceController.getServices()

# Transactions
POST           /v1/transaction                                                 gl.glue.brahma.controllers.TransactionController.createPaypalTransaction()
GET            /v1/transaction/:id                                             gl.glue.brahma.controllers.TransactionController.getTransaction(id: Integer)
POST           /v1/transaction/execute                                         gl.glue.brahma.controllers.TransactionController.executePaypalTransaction()

# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                                                   controllers.Assets.at(path="/public", file)
