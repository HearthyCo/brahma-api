# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                               gl.glue.brahma.controllers.Application.index()

# User
POST        /v1/user                                                        gl.glue.brahma.controllers.UserController.register()
GET         /v1/user/home                                                   gl.glue.brahma.controllers.HomeController.get()
POST        /v1/user/login                                                  gl.glue.brahma.controllers.UserController.login()
POST        /v1/user/register                                               gl.glue.brahma.controllers.UserController.register()
GET         /v1/user/sessions/$state<(programmed|underway|closed)\b>        gl.glue.brahma.controllers.SessionController.getState(state: String)
GET         /v1/user/balance                                                gl.glue.brahma.controllers.BalanceController.getBalance()

# Sessions
GET         /v1/session/:session                                            gl.glue.brahma.controllers.SessionController.getSession(session: Integer)

#Services
GET         /v1/services                                                    gl.glue.brahma.controllers.ServiceController.getServices()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                                   controllers.Assets.at(path="/public", file)
